{
    "compilerOptions": {
        /* Basic Options */
        "incremental": true,
        "module": "ESNext",
        "target": "ES2024",
        "outDir": "./dist",
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": false, // modified
        "noFallthroughCasesInSwitch": true,
        /* Module Resolution Options */
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noUncheckedIndexedAccess": false, // modified
        "sourceMap": true,
        /* Experimental Options */
        "experimentalDecorators": false, // modified
        /* Advanced Options */
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
